<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:ariketa1"
    xmlns:libreriaVehiculos="clr-namespace:libreriaVehiculos;assembly=libreriaVehiculos" 
    x:Class="ariketa1.MainWindow"
    mc:Ignorable="d"
    Title="Selecciona Transporte"
    Height="320" Width="300"
    Background="#F5F5F5"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >

            <TextBlock Text="Aukeratu erreserba"
                       FontWeight="Bold" FontSize="16" TextAlignment="Center" 
                       Margin="0,0,0,20" Foreground="#333"/>

            <DatePicker x:Name="datePickerReserva"
                SelectedDate="{x:Static sys:DateTime.Today}"
                DisplayDateStart="{x:Static sys:DateTime.Today}"
                DisplayDateEnd="{Binding TwoMonthsFromNow}"
                Margin="0,0,0,20" Height="30"/>

            <Button x:Name="btn_autobus" Content="Autobusa" Height="40" Margin="0,0,0,12" 
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold"
                    Click="btn_autobus_Click" BorderThickness="0" 
                    Cursor="Hand" />

            <Button x:Name="btn_tren" Content="Trena" Height="40" Margin="0,0,0,12" 
                    Background="#2196F3" Foreground="White" FontWeight="SemiBold"
                    Click="btn_tren_Click" BorderThickness="0"
                    Cursor="Hand" />

            <Button x:Name="btn_avion" Content="Hegazkina" Height="40" Margin="0" 
                    Background="#FF9800" Foreground="White" FontWeight="SemiBold"
                    Click="btn_avion_Click" BorderThickness="0"
                    Cursor="Hand" />

        </StackPanel>
    </Grid>
</Window>
